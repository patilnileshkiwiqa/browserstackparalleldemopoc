<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="akami" verbose="10" parallel="tests" thread-count="3">
	<listeners>
		<listener class-name="com.akami.utility.CustomDetailReporter" />
		<listener
			class-name="com.akami.utility.CustomReporterBuildSummary" />
		<listener class-name="com.akami.utility.CustomReporter" />
		<listener class-name="com.akami.reports.ExtentReportListener" />
	</listeners>

	<parameter name="ExecutionByXML" value="true" />
	<parameter name="Browser" value="chrome" />
	<parameter name="URL"
		value="https://www.saucedemo.com/inventory.html" />

	<!-- <parameter name="config_file" value="parallel.conf.json" /> <parameter 
		name="environment" value="env1" /> -->

	<parameter name="email" value="standard_user" />
	<parameter name="password" value="secret_sauce" />

	<test name="Do_Login">
		<parameter name="config_file" value="parallel.conf.json" />
		<parameter name="environment" value="env1" />
		<classes>
			<class name="com.akami.Login.LoginIndex">
				<methods>
					<include name="logout">
					</include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Do_Logout">
		<parameter name="config_file" value="parallel.conf.json" />
		<parameter name="environment" value="env2" />
		<classes>
			<class name="com.akami.Login.LoginIndex">
				<methods>
					<include name="logout">
					</include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Do_clickonsidemenu">
		<parameter name="config_file" value="parallel.conf.json" />
		<parameter name="environment" value="env3" />
		<classes>
			<class name="com.akami.test.TestIndex">
				<methods>
					<include name="sideMenu">
					</include>
				</methods>
			</class>
		</classes>
	</test>

</suite>
